<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.twitchflix.applicationclient">

    <application
        android:name=".ClientApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:windowSoftInputMode="adjustResize"
            android:name=".activities.AccountSettings"
            android:label="@string/title_activity_account_settings"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".channelview.ChannelView"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activities.StreamOptions"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activities.WatchVideo" />
        <activity android:name=".activities.StreamVideo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".landingpage.LandingPage"
            android:label="@string/title_activity_landing_page_n"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activities.RegisterActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.LoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera2.full" />

    <uses-feature android:name="android.hardware.camera2.autofocus" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>