<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".channelview.ChannelView"
                                                   android:id="@+id/channel_activity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton android:layout_width="wrap_content"
                                                                           android:layout_height="wrap_content"
                                                                           android:padding="5dp"
                                                                           android:src="@drawable/ic_arrow_back_black_24dp"
                                                                           app:layout_constraintTop_toTopOf="parent"
                                                                           app:layout_constraintStart_toStartOf="parent"
                                                                           android:onClick="backButtonPressed"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:layout_height="match_parent"
                                                           android:layout_width="match_parent">
        <LinearLayout android:id="@+id/channelNameLayout"
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal">

            <com.twitchflix.applicationclient.customview.RoundedView android:id="@+id/channel_thumbnail"
                                                                     android:layout_width="100dp"
                                                                     android:layout_height="100dp"
                                                                     android:scaleType="centerInside"
                                                                     android:layout_marginTop="20dp"
                                                                     android:src="@mipmap/ic_launcher_round"
            />

            <TextView android:id="@+id/channelName"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:text="Test Channel"
                      android:gravity="center"
            />

        </LinearLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/channel_scroll_view">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/channel_main_layout"
                    android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>