<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="156dp"
            android:layout_height="103dp"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/landing_page_string"
            android:layout_width="218dp"
            android:layout_height="68dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"
            android:transitionName="test_transition"
            android:fontFamily="sans-serif-smallcaps"
            android:id="@+id/main_page_text" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="136dp"/>
</android.support.constraint.ConstraintLayout>