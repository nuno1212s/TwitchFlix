<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ChoosePictureActivity">

    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#0000"
                 android:padding="5dp"
                 android:src="@drawable/ic_arrow_back_black_24dp"
                 android:onClick="handleBackButton"
                 android:contentDescription="@string/go_back"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="8dp"
                 android:layout_marginStart="8dp"/>

    <com.twitchflix.applicationclient.customviews.RoundedView
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:scaleType="centerInside"
            app:srcCompat="@color/backgroundGray"
            android:id="@+id/currentPhoto"
            android:rotation="90"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"/>
    <Button
            android:text="@string/choose_photo"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/choosePhoto"
            android:onClick="choosePhoto"
            style="@style/Widget.AppCompat.Button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="@string/take_photo"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/takePhoto"
            android:onClick="takePhoto"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="@string/save_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveChanges"
            android:id="@+id/save"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toEndOf="@+id/choosePhoto" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/takePhoto"/>
</androidx.constraintlayout.widget.ConstraintLayout>